        (() => {

            document.getElementById('checkbox-show-all-warning-alerts').addEventListener('change', event => { toggleAlert(event) })
            document.getElementById('checkbox-show-all-info-alerts').addEventListener('change', event => { toggleAlert(event) })

        })()

        function toggleAlert(event) {
            let type = event.target.id.split('-')[3],
                alert = document.getElementsByClassName(`alert-${type}`),
                icon = document.getElementById(`icon-checkbox-show-all-${type}-alerts`)
            if (event.target.checked) {
                for (i = 0; i < alert.length; i++) { alert[i].style.display = 'block' }
                icon.className = `form-check form-switch text-${type}`
            } else {
                for (i = 0; i < alert.length; i++) { alert[i].style.display = 'none' }
                icon.className = 'form-check form-switch text-secondary'
            }
        }

